{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "test": "vitest --reporter=verbose --run",
    "test:unit": "cross-env TESTING_TYPE=unit ENVIRONMENT=testing npm run test",
    "test:integration": "prisma migrate deploy && cross-env TESTING_TYPE=integration ENVIRONMENT=testing npm run test",
    "dev": "nodemon index.js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.9",
    "prisma": "^6.6.0",
    "supertest": "^7.1.0",
    "vitest": "^3.1.1",
    "vitest-mock-extended": "^3.1.0"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0"
  }
}
